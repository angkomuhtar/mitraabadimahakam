<div class="row">
    <div class="col-md-12">
        <div class="white-box">
            <div class="" id="content-list">
                <div class="row sales-report">
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        <button class="btn btn-outline btn-info waves-effect waves-light" id="create-form"> 
                            <i class="fa fa-plus m-r-5"></i> <span>Add New Seam</span>
                        </button>
                    </div>
                    <div class="col-md-3 col-sm-3 col-xs-12 text-right">
                        <div class="input-group">
                            <input id="inpKeywordSeam" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn"> 
                                <button class="btn btn-info" type="button" id="bt-search-keyword">Go!</button> 
                            </span>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead style="border-bottom: 2px solid;">
                            <tr>
                                <th class="sl text-center" width="20">No</th>
                                <th class="sl text-center" width="20">ACT</th>
                                <th class="sl" width="150">Kode Seam</th>
                                <th class="sl">PIT Name</th>
                                <th class="sl">Site Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if(list.data.length < 1)
                              <tr><td colspan="5">Data not found or data is not exsist</td></tr>
                            @endif
                            @each(item in list.data)
                                <tr>
                                    <td style="vertical-align: middle;">{{$loop.index + 1}}</td>
                                    <td style="vertical-align: middle;">
                                        <button class="btn btn-outline btn-warning btn-xs bt-edit-data" data-id="{{item.id}}">edit</button>
                                    </td>
                                    <td class="single-line text-mute">
                                        <p style="font-size: 20px;font-weight: 600;margin-top: 10px;">
                                            {{item.kode}}
                                        </p>
                                    </td>
                                    <td style="vertical-align: middle;">
                                        <strong>{{item.pit.kode}} - {{item.pit.name}}</strong>
                                    </td>
                                    <td style="vertical-align: middle;">
                                        <strong>
                                            {{item.pit.site.kode}} - {{item.pit.site.name}}
                                        </strong>
                                    </td>
                                </tr>
                            @endeach
                        </tbody>
                    </table>
                </div>
