                                                        <option value="open">Open</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-4" id="approved_date_div">
                                            <label for="tgl">Approved Date</label>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <div class="input-group-addon"><i class="fa fa-calendar-o"></i></div>
                                                    <input type="date" class="form-control input-sm initDate" name="approved_date" required>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <textarea class="form-control hidden" name="dataJson" rows="5"></textarea>
                                                <input type="hidden" name="current_file_name" value="" />
                                            </div>
                                        </div>
                                        <div class="col-md-6" id="upload-file">
                                            <label for="tgl">Upload File</label>
                                            <div class="form-group">
